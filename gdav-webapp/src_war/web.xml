<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" 
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app 	xmlns="http://java.sun.com/xml/ns/j2ee" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" 
		version="2.4">

	<display-name>Genome Delinked Annotation Viewer</display-name>
	<description>
	This is a simple servlet to allow quick display of 
	tab-delimited annotations independant of genomic alignment
	</description>

	<servlet>
	<servlet-name>gdav</servlet-name>
	<servlet-class>org.vectorbase.gdav.GdavServlet</servlet-class>
	</servlet>

	<servlet-mapping>
	<servlet-name>gdav</servlet-name>
	<url-pattern>/index.html</url-pattern>
	</servlet-mapping>

	<taglib>
	<taglib-uri>http://java.sun.com/jstl/fmt</taglib-uri>
	<taglib-location>/WEB-INF/tld/fmt.tld</taglib-location>
	</taglib>

	<taglib>
	<taglib-uri>http://java.sun.com/jstl/fmt-rt</taglib-uri>
	<taglib-location>/WEB-INF/tld/fmt-rt.tld</taglib-location>
	</taglib>

	<taglib>
	<taglib-uri>http://java.sun.com/jstl/core</taglib-uri>
	<taglib-location>/WEB-INF/tld/c.tld</taglib-location>
	</taglib>

	<taglib>
	<taglib-uri>http://java.sun.com/jstl/core-rt</taglib-uri>
	<taglib-location>/WEB-INF/tld/c-1_0-rt.tld</taglib-location>
	</taglib>

	<taglib>
	<taglib-uri>http://java.sun.com/jstl/sql</taglib-uri>
	<taglib-location>/WEB-INF/tld/sql.tld</taglib-location>
	</taglib>

	<taglib>
	<taglib-uri>http://java.sun.com/jstl/sql-rt</taglib-uri>
	<taglib-location>/WEB-INF/tld/sql-rt.tld</taglib-location>
	</taglib>

	<taglib>
	<taglib-uri>http://java.sun.com/jstl/x</taglib-uri>
	<taglib-location>/WEB-INF/tld/x.tld</taglib-location>
	</taglib>

	<taglib>
	<taglib-uri>http://java.sun.com/jstl/x-rt</taglib-uri>
	<taglib-location>/WEB-INF/tld/x-rt.tld</taglib-location>
	</taglib>


</web-app>
